{
  "name": "codetune",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.0.2",
  "publisher": "FreeRave",
  "repository": {
    "type": "git",
    "url": "https://github.com/kareem2099/codetune.git"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "relaxing",
    "music",
    "code",
    "focus",
    "quran",
    "tune",
    "islamic"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "CodeTune",
      "properties": {
        "codeTune.enableReminders": {
          "type": "boolean",
          "default": true,
          "description": "%config.codeTune.enableReminders%"
        },
        "codeTune.reminderInterval": {
          "type": "number",
          "default": 60,
          "minimum": 5,
          "maximum": 240,
          "description": "%config.codeTune.reminderInterval%"
        },
        "codeTune.showAdia": {
          "type": "boolean",
          "default": true,
          "description": "%config.codeTune.showAdia%"
        },
        "codeTune.showAhadis": {
          "type": "boolean",
          "default": true,
          "description": "%config.codeTune.showAhadis%"
        },
        "codeTune.showWisdom": {
          "type": "boolean",
          "default": true,
          "description": "%config.codeTune.showWisdom%"
        },
        "codeTune.workingHoursOnly": {
          "type": "boolean",
          "default": false,
          "description": "%config.codeTune.workingHoursOnly%"
        },
        "codeTune.language": {
          "type": "string",
          "default": "auto",
          "enum": ["auto", "en", "ar"],
          "enumDescriptions": [
            "Auto (Follow VS Code)",
            "English",
            "العربية (Arabic)"
          ],
          "description": "Choose the display language for CodeTune"
        }
      }
    },
    "views": {
      "codeTune": [
        {
          "id": "codeTuneMain",
          "name": "%views.codeTuneMain.name%",
          "icon": "$(music)",
          "contextualTitle": "%views.codeTuneMain.contextualTitle%",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeTune",
          "title": "%viewsContainers.codeTune.title%",
          "icon": "$(music)"
        }
      ]
    },
    "commands": [
      {
        "command": "codeTune.playQuran",
        "title": "%commands.codeTune.playQuran.title%"
      },
      {
        "command": "codeTune.stop",
        "title": "%commands.codeTune.stop.title%"
      },
      {
        "command": "codeTune.openSettings",
        "title": "%commands.codeTune.openSettings.title%"
      }
    ],
    "keybindings": [
      {
        "command": "codeTune.playQuran",
        "key": "ctrl+shift+q"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^17.2.2",
    "music-metadata": "^11.9.0",
    "vscode-nls": "^5.2.0"
  }
}
